# Database
DATABASE_PROVIDER="supabase"
DATABASE_URL="postgresql://postgres:password@localhost:5432/postgres?schema=public&sslmode=require&pgbouncer=true"
# Database Configuration
DB_HOST="localhost"
DB_PORT=5432
DB_USER="postgres"
DB_PASSWORD="your-password"
DB_NAME="postgres"
# Connection pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# App
NODE_ENV=development
PORT=4000
FRONTEND_URL="http://localhost:3000"

# JWT
JWT_SECRET="tradelink-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="tradelink-refresh-secret-key-change-in-production-min-32-chars"
JWT_REFRESH_EXPIRES_IN="7d"

# Internationalization
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,tw,ewe,ha"
DEFAULT_TIMEZONE="Africa/Accra"
DEFAULT_CURRENCY="USD"

# Supabase (optional)
SUPABASE_URL="your-supabase-url"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Logging / Rate limit
LOG_LEVEL="debug"
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# OpenAI API Key
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Payment
PAYSTACK_SECRET_KEY="sk_test_your-paystack-key"
PAYSTACK_PUBLIC_KEY="pk_test_your-paystack-key"
MOMO_API_KEY="your-momo-api-key"

# External APIs
GCMS_API_URL="https://gcmstest.gov.gh/api"
ICUMS_API_URL="https://icumstest.gov.gh/api"
GEPA_API_URL="https://gepa.gov.gh/api"
GHANA_BUSINESS_REGISTRY_URL="https://brs.gov.gh/api"

# File Upload
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"
AWS_S3_BUCKET="tradelink-uploads"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@tradelink.com"
FROM_NAME="TradeLink+"

# App Configuration
APP_NAME="TradeLink+"
APP_URL="http://localhost:3000"
SUPPORT_EMAIL="support@tradelink.com"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-session-secret"
CORS_ORIGIN="http://localhost:3000"

# Feature Flags
ENABLE_AI_MATCHING="true"
ENABLE_BLOCKCHAIN="false"
ENABLE_SMS_NOTIFICATIONS="true"
ENABLE_REAL_TIME_TRACKING="true"
